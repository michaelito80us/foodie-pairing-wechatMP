.row-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.round-img{
  width: 100%;
  height: 100%;
}

.profile-avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 9999px;
  overflow: hidden;
}

.avatar-container {
  box-sizing: border-box;
  width: 300rpx;
  height: 300rpx;
  padding: 70rpx;
  background-color: #d6d6d6;
  border-radius: 9999px;
}

.fork{
  margin-bottom: 20rpx;
}

.slot {
  font-size: 50rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-right: 30rpx;
}

.bookingDetails{
  box-sizing: border-box;
  margin-bottom: 30rpx;
  padding: 40rpx;
  overflow: hidden;
  height: 100%;
  width: 100%;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

.section{
  width: 100%;
}